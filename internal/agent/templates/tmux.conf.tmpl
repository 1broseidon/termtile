# termtile tmux configuration
# Optimized for agentic workflows - scroll just works!
#
# This file is auto-generated by termtile on first run.
# Feel free to customize - termtile will not overwrite your changes.

# Set window title to session name (required for workspace slot matching)
set -g set-titles on
set -g set-titles-string "#{session_name}"

# Enable mouse support
set -g mouse on

# Large scrollback buffer for reviewing long command output
set -g history-limit 50000

# Scroll up automatically enters copy mode
# This is the key UX fix - no more Ctrl-b [ before scrolling!
bind -n WheelUpPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "if -Ft= '#{pane_in_mode}' 'send-keys -M' 'select-pane -t=; copy-mode -e; send-keys -M'"

# Scroll down in copy mode (or exit if at bottom)
bind -n WheelDownPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "if -Ft= '#{pane_in_mode}' 'send-keys -M' 'select-pane -t='"

# Use vi-style keys in copy mode
setw -g mode-keys vi

# Start selection with v, yank with y
bind -T copy-mode-vi v send-keys -X begin-selection
bind -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# Reduce escape time for faster response
set -sg escape-time 10

# Enable true color support
set -g default-terminal "tmux-256color"
set -ag terminal-overrides ",xterm-256color:RGB"

# Status bar - minimal and informative
set -g status-style 'bg=#1a1a1a fg=#808080'
set -g status-left '#[fg=#4a9eff]#S '
set -g status-right '#[fg=#606060]%H:%M'
set -g status-left-length 30

# Active pane border
set -g pane-active-border-style 'fg=#4a9eff'
set -g pane-border-style 'fg=#303030'
